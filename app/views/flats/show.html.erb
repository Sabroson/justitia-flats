<main class="show-page">
  <div class="container">
    <div class="row">

      <div class="col-xs-8 col-md-8">
        <div class="limit">
          <% if @flat.primary_picture_url %>
              <%= cl_image_tag(@flat.primary_picture_url, :style => "width: 100%; height: 100%; margin-top: 15px;") %>
            <% else %>
              <%= image_tag("living_room.jpg", :style => "width: 100%; height: 100%; margin-top: 45px;") %>
          <% end %>
        </div>
      </div>

      <div class="col-xs-4 col-md-4">
        <div class="airbnbplus-logo">
        <%= image_tag("airbnbplus.png", :style => "height: 85px; margin-left: 85px; margin-top: 20px;") %>
        </div>
        <div>
          <strong><small class="apartment-name"><%= @flat.name.upcase %></small></strong>
        </div>
        <div class="flat-description">
          <p><%= @flat.description %></p>
        </div>
        <br>
        <div class="flat-address">
          <small><strong>Address:</strong><br><%= @flat.address %></small>
        </div>
        <br>
        <div class="flat-price">
          <small><strong>Price: </strong><%= @flat.price_per_night %>€/night</small>
        </div>
        <br>
        <div class="flat-space">
          <small><strong>Guests: </strong><%= @flat.number_of_guests %> persons</small>
        </div>

        <div class="show-buttons">
          <%= link_to "Book", "#", class: "btn btn-pink", style: "margin-top: 10px;" %>
         <button class="btn btn-success btn-green" data-toggle="modal" data-target=".bs-example-modal-lg">More Pics</button>
        </div>

      </div>
    </div>

    <div class=row>
      <div class="col-xs-12" style="height: 50px;">
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12" id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    <div class="row">

      <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">

              <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">


                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                  <% @flat.pictures.each do |picture| %>
                    <div class="item <%= "active" if picture.is_primary %>">
                        <%= cl_image_tag(picture.url, class: "image-responsive")%>
                    </div>
                  <% end %>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>


          </div>
        </div>
      </div>
    </div>

    </div>
