<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-5">

      <% @flats.each do |flat| %>

        <%= link_to flat_path(flat) do %>

        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(
          <% if flat.primary_picture_url %>
          <%= flat.primary_picture_url %>
          <% else %>
          <%= "https://vignette.wikia.nocookie.net/theislands/images/f/fd/House_placeholder.jpg/revision/latest?cb=20140101201028" %>
          <% end %>);">


          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2> <%= flat.name %> </h2>
            <p> <%= flat.description %> </p>

          </div>

          <div class="card-info">
              <p> <i class="fas fa-euro-sign"></i>  <%= flat.price_per_night %><i class="fas fa-user"></i>  <%= flat.number_of_guests %></p>
          </div>

        </div>

        <% end %>
      <% end %>

    </div>
  </div>
</div>
