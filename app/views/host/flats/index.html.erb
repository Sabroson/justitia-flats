

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Manage your Flats</h1>

      <% @flats.each do |flat| %>

      <div class="message">
        <% if flat.primary_picture_url %>
        <%= cl_image_tag flat.primary_picture_url, class: "img-size" %>
          <% else %>
        <%= image_tag "https://vignette.wikia.nocookie.net/theislands/images/f/fd/House_placeholder.jpg/revision/latest?cb=20140101201028", class: "img-size" %>
        <% end %>
        <div class="message-body">
          <p><strong> <%= flat.name %> </strong></p>
          <p><%= flat.address %></p>
        </div>
        <% end %>
        <div class="message-status">
          <%#= link_to "Edit", edit_flat_path(@flat), class: "btn btn btn-outline-info" %>
          <br>
          <%#= link_to "Manage your booking", bookings_path, class: "btn btn-outline-light" %>
        </div>
      </div>
    </div>
  </div>
</div>


