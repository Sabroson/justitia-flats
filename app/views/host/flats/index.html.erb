

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Manage your Flats</h1>

      <% @flats.each do |flat| %>

        <div class="message">
          <% if flat.pictures.where(is_primary: true) %>
            <%= cl_image_tag flat.pictures.where(is_primary: true), class: "img-size" %>
          <% end %>

          <div class="message-body">
            <p><strong> <%= flat.name %> </strong></p>
            <p><%= flat.address %></p>
          </div>

          <div class="message-status">
            <%= link_to "Edit", edit_flat_path(@flat), class: "btn btn btn-outline-info" %>
            <br>
            <%= link_to "Manage your booking", bookings_path, class: "btn btn-outline-light" %>
          </div>

        </div>

      <% end %>

    </div>
  </div>
</div>


