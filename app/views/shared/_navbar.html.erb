<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag("logo.png") %>
  </a>

  <!-- Right Navigation -->

  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if user_signed_in? %>

    <div class="navbar-welcome-message">Welcome <%= current_user.first_name.capitalize %>!</div>

        <% if current_user.is_host %>
          <%= link_to "Add a Flat", new_flat_path, class: "navbar-wagon-item navbar-wagon-link" %>
         <%= link_to "My flats", host_flats_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <% else %>
         <%= link_to "Become a host", new_flat_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <% end %>
      <% if !current_user.bookings.first.nil?  %>
    <%= link_to "My bookings", bookings_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>

    <% else  %>
    <%= link_to "Become a host", new_flat_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Log in", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Sign up", new_user_registration_path, class: "btn navbar-button" %>
    <% end  %>
  </div>


  <!-- Dropdown appearing on mobile only -->

  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
        <div class="navbar-welcome-message-small">Welcome <%= current_user.first_name.capitalize %>!</div>

         <% if current_user.is_host %>
            <li><%= link_to "Add a Flat", new_flat_path %></li>
           <li><%= link_to "My flats", host_flats_path %></li>
          <% else %>
           <li><%= link_to "Become a host", new_flat_path %></li>
          <% end %>
        <% if !current_user.bookings.first.nil?  %>
        <li><%= link_to "My bookings", bookings_path %></li>
        <% end %>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
        <% else  %>
        <li><%= link_to "Become a host", new_flat_path %></li>
        <li><%= link_to "Log in", new_user_session_path %></li>
        <li><%= link_to "Sign up", new_user_registration_path %></li>
        <% end  %>

      </ul>
    </div>
  </div>
</div>
