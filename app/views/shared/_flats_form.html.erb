<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">

      <%= simple_form_for @flat do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests%>
      <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id} %>
      <%= f.input :address %>
      <div id=image-fields>
        <%= f.simple_fields_for :pictures do |p| %>
        <div id=image-field>
          <%= p.input :picture %>
          <%= p.input :picture_cache, as: :hidden %>
        </div>
        <% end %>

      </div>



      <%= f.submit "Add a flat", class: "btn btn-primary" %>
      <button type="button" class="btn btn-success" id="more-pictures-button">Add more pictures</button>

      <% end %>

    </div>
  </div>
</div>



